{% extends 'base.html.twig' %}

{% block body %}
    <h1>Hello {{ name }} vous avez {{ age }} ans</h1>

    <ul>
        {% for fruit in fruitList %}
            <li>{{ fruit }}</li>
        {% endfor %}
    </ul>

    {% if age>18 %}
        <p>Vous êtes majeur</p>
    {% else %}
        <p>Vous êtes mineur</p>
    {% endif %}

    <a href="{{ path('home_add', {'number1': '5', 'number2': '9'}) }}">la somme de 5 et 9</a>
{% endblock %}
