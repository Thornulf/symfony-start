{% extends 'base.html.twig' %}

{% block title %}Hello BookGenreController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des genre de livre</h1>

    <div>
        <a href="{{ path('genre_new') }}">
            Nouveau genre
        </a>
    </div>

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Action</th>
        </tr>
        </thead>

        <tbody>
        {% for genre in bookGenreList %}
            <tr>
                <td>{{ genre.name }}</td>
                <td>
                    <a href="{{ path('genre_edit', {'id': genre.id}) }}">
                        Modifier
                    </a>
                    &nbsp;|&nbsp;
                    <a href="{{ path('genre_delete', {'id': genre.id}) }}">
                        Supprimer
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
