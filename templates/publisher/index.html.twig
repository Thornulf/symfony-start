{% extends 'base.html.twig' %}

{% block title %}Hello PublisherController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des éditeurs</h1>

    <div>
        <a href="{{ path('publisher_new') }}">
            Nouvel éditeur
        </a>
    </div>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
        {% for publisher in publisherList %}
            <tr>
                <td>{{ publisher.name }}</td>
                <td>{{ publisher.eMail }}</td>
                <td>
                    <a href="{{ path('publisher_edit', {'id': publisher.id}) }}">
                        Modifier
                    </a>
                    &nbsp;|&nbsp;
                    <a href="{{ path('publisher_delete', {'id': publisher.id}) }}">
                        Supprimer
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
